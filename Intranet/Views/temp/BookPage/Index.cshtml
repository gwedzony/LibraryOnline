@model IEnumerable<Database.DATA.Library.BookPage>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BigCoverImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PdfUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AudioUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BigCoverImg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PdfUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AudioUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookPageId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BookPageId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BookPageId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
