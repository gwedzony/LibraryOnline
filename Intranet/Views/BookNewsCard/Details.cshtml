@model Database.DATA.CMS.BookNewsCard

@{
    ViewData["Title"] = "Details";
}

<h1>Podgląd</h1>

<div>
    <h4>Karta:</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SmallCoverImg)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SmallCoverImg)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BookLink)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookLink)
        </dd>
        <dt class = "col-sm-2">
            Data utworzenia karty
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WhenCreated)
        </dd>
        <dt class = "col-sm-2">
           Tytuł książki 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.BookNewsCardId" class="btn btn-success">Edytuj</a>
    <a asp-action="Index">
        <div class="btn btn-outline-primary"><i class="bi bi-arrow-left mx-1"></i><span class="mx-2"></span>Powrót</div>
    </a>
</div>
