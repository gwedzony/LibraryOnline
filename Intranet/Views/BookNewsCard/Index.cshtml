@model IEnumerable<Database.DATA.CMS.BookNewsCard>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SmallCoverImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhenCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SmallCoverImg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhenCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookNewsCardId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BookNewsCardId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BookNewsCardId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
