@model Database.DATA.BookScheme.Book

@{
    ViewData["Title"] = "Edit";
}

<h1>Edycja</h1>

<h4>Edytujesz książkę:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookId" />
            <div class="form-group mb-2">
                <label asp-for="image" class="control-label"></label>
                <input asp-for="image" class="form-control" id="image" onchange="changeImage()"/>
                <span asp-validation-for="image" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="IdAuthor" class="control-label">Autor:</label>
                <select asp-for="IdAuthor" class="form-select" asp-items="ViewBag.IdAuthor"></select>
                <span asp-validation-for="IdAuthor" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="IdBookType" class="control-label">Typ książki:</label>
                <select asp-for="IdBookType" class="form-select" asp-items="ViewBag.IdBookType"></select>
                <span asp-validation-for="IdBookType" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="IdGenre" class="control-label">Gatunek:</label>
                <select asp-for="IdGenre" class="form-select" asp-items="ViewBag.IdGenre"></select>
                <span asp-validation-for="IdGenre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <a asp-action="Index">
                    <div class="btn btn-outline-primary"><i class="bi bi-arrow-left mx-1"></i><span class="mx-2"></span>Powrót</div>
                </a>
                <button type="submit" class="btn btn-success">Edytuj<span class="mx-2"></span><i class="bi bi-save"></i> </button>
            </div>
        </form>
    </div>
</div>


