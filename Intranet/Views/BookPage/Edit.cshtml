@model Database.DATA.Library.BookPage

@{
    ViewData["Title"] = "Edit";
}

<h1>Edycja</h1>

<h4>Edytujesz stronę książki</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookPageId" />
            <div class="form-group mb-2">
                <label asp-for="BigCoverImg" class="control-label"></label>
                <input asp-for="BigCoverImg" class="form-control" />
                <span asp-validation-for="BigCoverImg" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PdfUrl" class="control-label"></label>
                <input asp-for="PdfUrl" class="form-control" />
                <span asp-validation-for="PdfUrl" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="AudioUrl" class="control-label"></label>
                <input asp-for="AudioUrl" class="form-control" />
                <span asp-validation-for="AudioUrl" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="LongDescription" class="control-label"></label>
                <input asp-for="LongDescription" class="form-control" />
                <span asp-validation-for="LongDescription" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="BookId" class="control-label">Tytuł książki</label>
                <select asp-for="BookId" class="form-control" asp-items="ViewBag.BookId"></select>
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <a asp-action="Index">
                    <div class="btn btn-outline-primary"><i class="bi bi-arrow-left mx-1"></i><span class="mx-2"></span>Powrót</div>
                </a>
                <button type="submit" class="btn btn-success">Edytuj<span class="mx-2"></span><i class="bi bi-save"></i> </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

