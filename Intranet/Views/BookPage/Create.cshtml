@model Database.DATA.Library.BookPage

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj strone książki</h1>

<h4>Strona książki</h4>
<hr />
<div class="row p-2">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BigCoverImg" class="control-label"></label>
                <input asp-for="BigCoverImg" class="form-control" />
                <span asp-validation-for="BigCoverImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PdfUrl" class="control-label"></label>
                <input asp-for="PdfUrl" class="form-control" />
                <span asp-validation-for="PdfUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookId" class="control-label"></label>
                <select asp-for="BookId" class ="form-control" asp-items="ViewBag.BookId"></select>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Lista stron</a>
</div>

