@model Database.DATA.Library.BookPage

@{
    ViewData["Title"] = "Delete";
}



<h3>Usuwasz stronę książki pt. @Html.DisplayFor(model => model.Book.Title)</h3>
<div>
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BigCoverImg)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BigCoverImg)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PdfUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PdfUrl)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AudioUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AudioUrl)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LongDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LongDescription)
        </dd>
        <dt class = "col-sm-2">
            Tytuł książki
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="BookId" />
        <a asp-action="Index"><div class="btn btn-outline-primary"><i class="bi bi-arrow-left mx-1"></i><span class="mx-2"></span>Powrót</div></a>
        <button type="submit" value="Usuń" class="btn btn-danger" ><i class="bi bi-trash"></i></button>
    </form>
</div>
