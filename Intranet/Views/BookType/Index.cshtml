@model IEnumerable<Database.Data.BookScheme.BookType>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista rodzajów książek</h1>

<p>
    <a asp-action="Create">Utworz typ książek</a>
</p>
<table class="table table-striped">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookTypeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookTypeName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookTypeId"><i class="bi bi-pencil-square"></i></a> 
                <a asp-action="Details" asp-route-id="@item.BookTypeId"><i class="bi bi-info-square"></i></a>
                <a asp-action="Delete" asp-route-id="@item.BookTypeId"><i class="bi bi-x-square"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
