@model IEnumerable<Database.DATA.CMS.BookPreviewCollection>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista podglądów</h1>

<p>
    <a asp-action="Create">Stworz podgląd książek</a>
</p>
<table class="table table-striped">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SmallCoverImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PdfUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AudioUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SmallCoverImg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PdfUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AudioUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PreviewId"><i class="bi bi-pencil-square"></i></a> 
                <a asp-action="Details" asp-route-id="@item.PreviewId"><i class="bi bi-info-square"></i></a> 
                <a asp-action="Delete" asp-route-id="@item.PreviewId"><i class="bi bi-x-square"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
