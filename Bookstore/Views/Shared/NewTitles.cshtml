@model IEnumerable<NewestBooksCards>

<div class="d-flex flex-column">
    <h3 class="text-center"><img src="img/blank.png" alt="blank" class="m-2 shadow-sm"/>Nowości</h3>
    
    <div class="text-center d-flex justify-content-evenly m-5">
      @if (Model != null)
      {
          foreach (var item in Model)
          {
              <div class="d-flex flex-row m-2 border rounded shadow-sm">
                  <div class="card-body d-flex flex-column bg-light ">
                      <p class="fw-lighter fs-6"></p>
                      <h5>@item.BookTitle</h5>
                      <h6>
                          @item.BookAuthor
                      </h6>
                      <p class="fw-lighter fs-6"> @item.BookDescription</p>
                      <a href="#" class="link-info text-decoration-none">Czytaj więcej</a>
                  </div>
                  <div class=""> <img src="@item.BookImage" class="card-img newest-card-img" alt="okladka ksiazki"></div>
              </div>
          }
      }
      else
      {
          <p>Nie ma ziom nic</p>
      }
        
      
       
      
    </div>
   
</div>