@model IEnumerable<Database.DATA.CMS.BookPreviewNewest>

<div class="d-flex flex-column">
    <h3 class="text-center"><img src="img/blank.png" alt="blank" class="m-2 shadow-sm"/>Nowości</h3>
    
    <div class="text-center d-flex justify-content-evenly m-5">
      
        @foreach (var test in Model)
        {
            <div class="d-flex flex-row m-2 border rounded shadow-sm">
                <div class="card-body d-flex flex-column bg-light ">
                    <p class="fw-lighter fs-6">Data dodania</p>
                    <h5>@Html.DisplayFor(model => test.Book.Title)</h5>
                    <h6>
                        @Html.DisplayFor(model => test.Book.Author.Name)

                        @Html.DisplayFor(model => test.Book.Author.Surname)
                    </h6>
                    <p class="fw-lighter fs-6">@Html.DisplayFor(model => test.Book.Description)</p>
                    <a href="#" class="link-info text-decoration-none">Czytaj więcej</a>
                </div>
                <div class="">  <img src="img/okladka.jpg" class="card-img" alt="okladka ksiazki"></div>
            </div>
        }
      
       
      
    </div>
   
</div>